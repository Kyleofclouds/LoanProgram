@model IEnumerable<LoanProgram.Models.ApplicationListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Pending Applications</h2>

<p>
    @Html.ActionLink("Create A New Application", "Create", null, new { @class = "btn btn-success" })
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Applicant.FullName)
        </th>
        <th>
            <center>@Html.DisplayNameFor(model => model.Type)</center>
        </th>
        <th>
            <center>@Html.DisplayNameFor(model => model.Occupation)</center>
        </th>
        <th>
            <center>@Html.DisplayNameFor(model => model.Salary)</center>
        </th>
        @*<th>
            <center>@Html.DisplayNameFor(model => model.MoveInDate)</center>
        </th>*@
        <th>
            <center>@Html.DisplayNameFor(model => model.ApplicationDate)</center>
        </th>
        <th>
            <center>@Html.DisplayNameFor(model => model.ResidencyLength)</center>
        </th>
        <th>
            <center>@Html.DisplayNameFor(model => model.Phone)</center>
        </th>
        <th>
            <center>@Html.DisplayNameFor(model => model.Email)</center>
        </th>
        <th>
            <center>@Html.DisplayNameFor(model => model.Consultant.FullName)</center>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Applicant.FullName)
            </td>
            <td>
                <center>@Html.DisplayFor(modelItem => item.Type)</center>
            </td>
            <td>
                <center>@Html.DisplayFor(modelItem => item.Occupation)</center>
            </td>
            <td>
                <center>$@Html.DisplayFor(modelItem => item.Salary)</center>
            </td>
            @*<td>
                <center>@Html.DisplayFor(modelItem => item.MoveInDate)</center>
            </td>*@
            <td>
                <center>@Html.DisplayFor(modelItem => item.ApplicationDate)</center>
            </td>
            <td>
                <center>@Html.DisplayFor(modelItem => item.ResidencyLength) Years</center>
            </td>
            <td>
                <center>@Html.DisplayFor(modelItem => item.Phone)</center>
            </td>
            <td>
                <center>@Html.DisplayFor(modelItem => item.Email)</center>
            </td>
            <td>
                <center>@Html.DisplayFor(modelItem => item.Consultant.FullName)</center>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
